{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "formatter": {
    "enabled": true,
    "lineWidth": 80,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useSemanticElements": "info"
      },
      "nursery": {
        "useMaxParams": {
          "level": "error",
          "options": {
            "max": 3
          }
        }
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noUnknownAtRules": {
          "level": "info",
          "options": {
            "ignore": ["tailwind"]
          }
        }
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": [
      "**/*.{ts,tsx,js,jsx,json,css,yml,yaml}",
      "!node_modules",
      "!dist",
      "!build",
      "!.next",
      "!out",
      "!public",
      "!.cache"
    ]
  }
}
